<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/color_black2" android:endColor="@color/color_black2" android:angle="270" android:centerY="0.75" android:centerColor="@color/color_black2"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="@color/color_red_5c" android:endColor="@color/color_red_5c" android:angle="270" android:centerY="0.75" android:centerColor="@color/color_red_5c"/>
            </shape>
        </clip>
    </item>
</layer-list>
