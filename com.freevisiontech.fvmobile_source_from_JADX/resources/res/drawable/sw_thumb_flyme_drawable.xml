<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false" android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#b8e2f8"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#dedede"/>
                    <corners android:radius="1dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#28a4e9"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#d0d0d0"/>
                    <corners android:radius="1dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
