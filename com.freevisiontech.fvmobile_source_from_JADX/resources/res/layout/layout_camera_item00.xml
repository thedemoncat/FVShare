<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_camera_item_relative_all" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/layout_camera_item_relative" android:layout_width="match_parent" android:layout_height="46dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="45dp">
                <TextView android:textSize="@dimen/text_size15" android:textColor="@color/color_black4" android:gravity="center" android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="44dp" android:layout_marginLeft="15dp" android:text="@string/label_camera"/>
                <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@mipmap/ic_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:id="@+id/line" android:background="@color/color_black3" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/layout_camera_item2_relative" android:visibility="gone" android:layout_width="match_parent" android:layout_height="46dp">
            <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="45dp">
                <TextView android:textSize="@dimen/text_size15" android:textColor="@color/color_black4" android:gravity="center" android:id="@+id/text2" android:layout_width="wrap_content" android:layout_height="44dp" android:layout_marginLeft="15dp" android:text="@string/label_hdr"/>
                <com.alanapi.switchbutton.SwitchButton android:id="@+id/switchButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:swThumbColor="@color/color_white" app:swBackColor="@color/switch_select_bg_color_black4"/>
            </RelativeLayout>
            <View android:id="@+id/line2" android:background="@color/color_black3" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
